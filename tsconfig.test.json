{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "build/test",
    "sourceMap": false,
    "declaration": false,
    "noImplicitUseStrict": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strictBindCallApply": true,
    "resolveJsonModule": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "allowJs": false,
    "typeRoots": []
  },
  "compileOnSave": false,
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["**/node_modules", "**/*.spec.ts"]
}

