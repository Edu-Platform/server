{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "build/main",
    "sourceMap": false,
    "declaration": false,
    "noImplicitUseStrict": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strictBindCallApply": true,
    "resolveJsonModule": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "allowJs": true,
    "typeRoots": ["node_modules/@types", "src/types/"]
  },
  "compileOnSave": false,
  "include": ["src/**/*"],
  "exclude": ["**/node_modules", "**/*.spec.ts"]
}
